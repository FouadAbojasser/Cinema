@model IEnumerable<Genre>

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="table-responsive pt-3">
				<table class="table table-striped project-orders-table">
					<thead>
						<tr>
							<th class="ml-5">ID</th>
							<th>Genre Icon</th>
							<th>Genre Title</th>
							<th>Description</th>
							<th>No. Of Movies</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var genre in Model)
						{
							<tr>
								<td>@genre.Id</td>
								<td class="py-1">
									<img src="~/img/genres/@genre.Img" alt="image"
										style="width: 50px; height: 50px; object-fit: cover;" />
								</td>
								<td>@genre.Title </td>
								<td>@genre.Description</td>
								<td class="pl-5">@genre.Movies.Count()</td>
								<td>
									<div class="d-flex align-items-center">
										<a href="/Admin/Genres/Edit/@genre.Id" class="btn btn-success btn-sm btn-icon-text mr-3">
											Edit
											<i class="typcn typcn-edit btn-icon-append"></i>
										</a>

										<a href="javascript:void(0);" onclick="confirmDelete(@genre.Id)" class="btn btn-danger btn-sm btn-icon-text">
											Delete
											<i class="typcn typcn-delete-outline btn-icon-append"></i>
										</a>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<!-- Create Floating Button -->
<a id="settings-trigger" href="/Admin/Genres/Create">
	<h5 style="color: aliceblue; vertical-align:central; margin:0px">+</h5>
</a>

<script>
	function confirmDelete(id) {
		Swal.fire({
			title: "Are you sure you want to delete this Genre?",
			text: "You won't be able to revert this!",
			icon: "warning",
			showCancelButton: true,
			confirmButtonColor: "#3085d6",
			cancelButtonColor: "#d33",
			confirmButtonText: "Yes, delete it!"
		}).then((result) => {
			if (result.isConfirmed) {
				// Optional: show a follow-up confirmation
				
				// Redirect to delete action
				setTimeout(() => {
					window.location.href = `/Admin/Genres/Delete/${id}`;
				}, 1500); // Wait for the alert to finish
			}
		});
	}
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["SuccessMessage"] != null)
{
	<script>
		Swal.fire({
			position: "center",
			icon: "success",
			title: "@TempData["SuccessMessage"]",
			showConfirmButton: false,
			timer: 1500
		});
	</script>
}

