@using Cinema.Models.ViewModels
@model LoginVM

<div class="container-scroller">
<div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="row w-100 m-0">
        <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-4 mx-auto">
                <div class="card-body px-5 py-5">
                    <h3 class="card-title text-left mb-3">Reset Password Request</h3>

                    <form asp-controller="Account" asp-action="ResetPasswordRequest" method="post">

                            <div class="form-group">
                                <label>Username or email *</label>
                                    <input class="form-control p_input" asp-for="UserNameOrEmail">
                                    <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn">Request Reset</button>
                            </div>

                    </form>

                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- row ends -->
</div>
<!-- page-body-wrapper ends -->
</div>