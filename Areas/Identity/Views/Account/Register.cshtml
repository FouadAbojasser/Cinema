@using Cinema.Models.ViewModels
@model RegisterVM
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <div class="text-danger" asp-validation-summary="All"> </div>
                        <h3 class="card-title text-left mb-3">Register New User</h3>

                        <form method="post">

                            <div class="form-group">
                                <label>Username</label>
                                <input class="form-control p_input" asp-for="UserName">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                <input class="form-control p_input" asp-for="Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group">
                                <label>Password</label>
                                <input class="form-control p_input" asp-for="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input class="form-control p_input" asp-for="ConfirmPassword">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <div class="form-group">
                                <label>Date of Birth</label>
                                <input class="form-control p_input" asp-for="DoB">
                                <span class="text-danger" asp-validation-for="DoB"></span>
                            </div>

                            @* <div class="form-group d-flex align-items-center justify-content-between"> *@
                            @*     <div class="form-check"> *@
                            @*         <label class="form-check-label"> *@
                            @*             <input  class="form-check-input" asp-for="RememberMe"> Remember me *@
                            @*         </label> *@
                            @*     </div> *@
                            @*     <a href="#" class="forgot-pass">Forgot password</a> *@
                            @* </div> *@

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn"> Register </button>
                            </div>
                            <div class="d-flex">
                                <button class="btn btn-facebook col mr-2">
                                    <i class="mdi mdi-facebook"></i> Facebook
                                </button>
                                <button class="btn btn-google col">
                                    <i class="mdi mdi-google-plus"></i> Google plus
                                </button>
                            </div>
                            <p class="sign-up text-center">Already have an Account? <a href="/Identity/Account/Login"> Sign In</a></p>
                            <p class="terms">By creating an account you are accepting our <a href="#">Terms & Conditions</a></p>
                        </form>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

